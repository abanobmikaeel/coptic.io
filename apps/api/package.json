{
	"name": "@coptic/api",
	"version": "2.0.0",
	"private": true,
	"description": "Coptic API - Daily readings according to the Katameros",
	"type": "module",
	"scripts": {
		"dev": "bun --watch src/index.ts",
		"build": "echo 'No build needed - using Bun runtime'",
		"start": "bun src/index.ts",
		"test": "vitest",
		"test:coverage": "vitest --coverage",
		"railway:start": "bun src/index.ts",
		"lint": "biome lint src",
		"lint:fix": "biome lint --write src",
		"format": "biome format --write src",
		"format:check": "biome format src",
		"check": "biome check src",
		"check:fix": "biome check --write src",
		"typecheck": "tsc --noEmit",
		"ci": "bun run typecheck && bun run check && bun run test"
	},
	"dependencies": {
		"@coptic/core": "workspace:*",
		"@coptic/data": "workspace:*",
		"@graphql-tools/schema": "^10.0.29",
		"@hono/node-server": "^1.14.3",
		"@hono/zod-openapi": "^1.1.5",
		"@scalar/hono-api-reference": "^0.9.25",
		"date-fns": "^4.1.0",
		"graphql": "^16.12.0",
		"graphql-yoga": "^5.16.2",
		"hono": "^4.11.10",
		"prom-client": "^15.1.3",
		"zod": "^4.1.12"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@types/node": "^22.10.5",
		"@vitest/coverage-v8": "3.2.4",
		"autocannon": "^8.0.0",
		"tsx": "^4.19.2",
		"typescript": "^5.7.3",
		"vitest": "^3.0.7"
	}
}
