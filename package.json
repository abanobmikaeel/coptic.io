{
	"name": "coptic.io",
	"version": "2.0.0",
	"description": "Coptic API - Daily readings according to the Katameros",
	"type": "module",
	"main": "dist/index.js",
	"scripts": {
		"dev": "bun --watch src/index.ts",
		"build": "echo 'No build needed - using Bun runtime'",
		"start": "bun src/index.ts",
		"test": "vitest",
		"test:coverage": "vitest --coverage",
		"railway:start": "bun src/index.ts",
		"lint": "eslint src",
		"lint:fix": "eslint src --fix",
		"format": "prettier --write \"src/**/*.{ts,tsx,js,jsx}\"",
		"format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx}\""
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:abanobmikaeel/coptic.io.git"
	},
	"author": "Abanob Mikaeel",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/abanobmikaeel/coptic.io/issues"
	},
	"homepage": "https://github.com/abanobmikaeel/coptic.io/blob/main/README.md",
	"dependencies": {
		"@graphql-tools/schema": "^10.0.29",
		"@hono/node-server": "^1.14.3",
		"@hono/zod-openapi": "^1.1.5",
		"@scalar/hono-api-reference": "^0.9.25",
		"date-fns": "^4.1.0",
		"graphql": "^16.12.0",
		"graphql-yoga": "^5.16.2",
		"hono": "^4.7.10",
		"typescript-eslint": "^8.47.0",
		"zod": "^4.1.12"
	},
	"devDependencies": {
		"@types/node": "^22.10.5",
		"@typescript-eslint/eslint-plugin": "^8.47.0",
		"@typescript-eslint/parser": "^8.47.0",
		"@vitest/coverage-v8": "3.2.4",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-prettier": "^5.5.4",
		"prettier": "^3.6.2",
		"tsx": "^4.19.2",
		"typescript": "^5.7.3",
		"vitest": "^3.0.7"
	}
}
